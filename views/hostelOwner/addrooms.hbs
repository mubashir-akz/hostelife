<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Add Guest</h4>
                        <p class="card-category">Complete profile</p>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/hostel/addGuest" enctype="multipart/form-data">
                            <div class="row">
                                <div class="alert alert-danger" role="alert" id="alert-login" style="display: none;">
                                    <div class="container">
                                        <div class="alert-icon">
                                            <i class="now-ui-icons objects_support-17"></i>
                                        </div>
                                        <strong>Oh snap!</strong> A room already have this number
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">
                                                <i class="now-ui-icons ui-1_simple-remove"></i>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Room No <span class="text-warning">*</span>
                                        </label>
                                        <input type="number" name="roomNO" id="roomNo" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">room Capacity<span
                                                class="text-warning">*</span></label>
                                        <input type="number" id="totalCapacityInRoom" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="">
                                        <label class="bmd-label-floating">Gender <span class="text-warning">*</span>
                                        </label>
                                        <select name="Gender" id="Gender" class="form-control">
                                            <option value="male">Male</option>
                                            <option value="female">Female</option>
                                        </select>
                                    </div>
                                </div>
                                <div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">Floor No<span
                                                class="text-warning">*</span></label>
                                        <input type="number" id="floorNo" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="bmd-label-floating">bed type <span
                                                class="text-warning">*</span></label>
                                        <select name="bedType" id="bedType" class="form-control">
                                            <option value="single">Single</option>
                                            <option value="double">Double</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <button type="button" onclick="validateForm()" class="btn btn-primary pull-right">Update
                                Profile</button>
                            <div class="clearfix"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    function validateForm() {
        const roomNo = document.getElementById('roomNo').value
        const roomCapacity = document.getElementById('totalCapacityInRoom').value
        const gender = document.getElementById('Gender').value
        const floorNo = document.getElementById('floorNo').value
        const bedType = document.getElementById('bedType').value
        $.ajax({
            url: '/hostel/addRooms',
            data: {
                roomNo, roomCapacity, gender, floorNo, bedType
            },
            method: 'POST',
            success: (data) => {
                alert(data.status)
                if(data.status){
                    window.location.href = '/hostel/roomManaging'
                } else {
                    document.getElementById('alert-login').style.display = 'block'
                }
            }
        })
    }
</script>